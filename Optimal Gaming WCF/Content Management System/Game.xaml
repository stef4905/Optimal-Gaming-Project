<UserControl x:Class="Content_Management_System.Game"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Content_Management_System"
             mc:Ignorable="d" 
             d:DesignHeight="1051" d:DesignWidth="1664">
	<Grid>
		<ListView x:Name="TableList" HorizontalAlignment="Left" Height="873" Margin="10,67,0,0" VerticalAlignment="Top" Width="1635">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="ID" Width="110" DisplayMemberBinding="{Binding MongoDBId}"/>
					<GridViewColumn Header="Game title" Width="800" DisplayMemberBinding="{Binding name}"/>
					<GridViewColumn Header="Release date" Width="200" DisplayMemberBinding="{Binding first_release_date}"/>
					<GridViewColumn Header="Visitors" Width="100" />
					<GridViewColumn Header="Genre" Width="210" DisplayMemberBinding="{Binding genre}"/>
					<GridViewColumn Header="Catagory" Width="210" DisplayMemberBinding="{Binding category}"/>
				</GridView>
			</ListView.View>
		</ListView>
		<TextBox x:Name="SearchField" HorizontalAlignment="Left" Height="38" Margin="10,14,0,0" TextWrapping="Wrap" Text="Search for game" VerticalAlignment="Top" Width="530" FontSize="24"/>
		<Button Content="Search" HorizontalAlignment="Left" Height="38" Background="#0984e3" Margin="554,14,0,0" VerticalAlignment="Top" Width="113" Foreground="White" FontSize="24" BorderThickness="0" Click="SearchForGame"/>
		<Button Content="Show all games" HorizontalAlignment="Left" Height="38" Background="#0984e3" Margin="686,14,0,0" VerticalAlignment="Top" Width="200" Foreground="White" FontSize="24" BorderThickness="0" Click="ShowAllGames"/>
		<Button Content="Add new game" HorizontalAlignment="Left" Height="54" Background="#0984e3" Margin="1456,968,0,0" VerticalAlignment="Top" Width="189" Foreground="White" FontSize="24" BorderThickness="0" Click="AddNewGame"/>
		<Button Content="Delete" HorizontalAlignment="Left" Height="54" Background="#d63031" Margin="10,968,0,0" VerticalAlignment="Top" Width="171" Foreground="White" FontSize="24" BorderThickness="0" Click="DeleteSelectedGame"/>
	</Grid>
</UserControl>
